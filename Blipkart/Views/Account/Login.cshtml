@model Blipkart.ViewModel.LoginInfo

@{
    ViewBag.Title = "Login";
}

<h2>Please login...</h2>

<form asp-controller="Account" asp-action="Login" method="post" class="u-full-width" role="form">
    <div>
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="UserName"></label>
            <div>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
        </div>
        <input type="hidden" id="ReturnUrl" asp-for="ReturnUrl" />
        <div>
            <label asp-for="Pwd"></label>
            <div>
                <input asp-for="Pwd" type="password" />
                <span asp-validation-for="Pwd"></span>
            </div>
        </div>
        <div>
            <div>
                <input type="submit" value="Login" class="button-primary" />
            </div>
        </div>
    </div>
</form>
